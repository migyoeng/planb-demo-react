{
  "family": "User-Web-Task",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "1024",
  "memory": "2048",
  "executionRoleArn": "arn:aws:iam::726629337826:role/DugoutTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::726629337826:role/DugOutTaskRole",

  "containerDefinitions": [
    {
      "name": "user-container",
      "image": "726629337826.dkr.ecr.ap-northeast-2.amazonaws.com/plan-b/user-service:latest",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 8001,
          "protocol": "tcp"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/user-task-web",
          "awslogs-region": "ap-northeast-2",
          "awslogs-stream-prefix": "ecs",
          "awslogs-create-group": "true"
        }
      },
      "environment": [
        {
          "name": "DJANGO_SETTINGS_MODULE",
          "value": "demo_user.settings"
        },
        {
          "name": "PYTHONUNBUFFERED",
          "value": "1"
        }
      ],
      "command": ["/app/entrypoint-web.sh"],
      "secrets": [
        {
          "name": "DB_HOST",
          "valueFrom": "arn:aws:secretsmanager:ap-northeast-2:726629337826:secret:prod/user/mysql-vm-MALiev:host::"
        },
        {
          "name": "DB_NAME",
          "valueFrom": "arn:aws:secretsmanager:ap-northeast-2:726629337826:secret:prod/user/mysql-vm-MALiev:dbname::"
        },
        {
          "name": "DB_USER",
          "valueFrom": "arn:aws:secretsmanager:ap-northeast-2:726629337826:secret:prod/user/mysql-vm-MALiev:username::"
        },
        {
          "name": "DB_PASSWORD",
          "valueFrom": "arn:aws:secretsmanager:ap-northeast-2:726629337826:secret:prod/user/mysql-vm-MALiev:password::"
        },
        {
          "name": "AWS_COGNITO_USER_POOL_ID",
          "valueFrom": "arn:aws:secretsmanager:ap-northeast-2:726629337826:secret:prod/cognito-config-WmvPts:cognito_user_pool_id::"
        },
        {
          "name": "AWS_COGNITO_USER_POOL_CLIENT_ID",
          "valueFrom": "arn:aws:secretsmanager:ap-northeast-2:726629337826:secret:prod/cognito-config-WmvPts:cognito_client_id::"
        },
        {
          "name": "AWS_COGNITO_REGION",
          "valueFrom": "arn:aws:secretsmanager:ap-northeast-2:726629337826:secret:prod/cognito-config-WmvPts:aws_region::"
        }
      ],
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "curl -f http://127.0.0.1:8001/healthz || exit 1"
        ],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      }
    }
  ]
}
